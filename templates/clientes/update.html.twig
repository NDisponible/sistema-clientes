{% extends "base.html.twig" %}
{% block body %}
<div class="container">
    <div class="row">
        <h2  class="titulo mt-5 mb-5 text-center">Modificar cliente</h2>
        <div class="caja container border col-md-6">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="col-md-6 offset-md-3 mt-4 mb-2">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.cliente) }}
                {{ form_widget(form.cliente,{'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email,{'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                <button class="btn btn-primary mt-2 mb-4 text-white">Modificar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
</div>
{% endblock %}